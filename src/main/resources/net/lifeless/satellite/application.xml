<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="application" class="net.lifeless.satellite.Application">
	</bean>
	
	<bean id="server" class="net.lifeless.satellite.server.SatelliteServer">
		<property name="serverId" value="localhost-01" />
		<property name="httpClient" ref="httpClient" />
	</bean>
	
	<bean id="httpClient" class="org.apache.commons.httpclient.HttpClient">
		<property name="httpConnectionManager" ref="httpConnectionManager" />
	</bean>
	
	<bean id="httpConnectionManager" class="org.apache.commons.httpclient.SimpleHttpConnectionManager">
	</bean>
</beans>
